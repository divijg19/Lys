{
  "name": "lys",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "clean": "rimraf .next out .velite",
    "clean:all": "rimraf .next out .velite node_modules bun.lock && bun install",
    "velite:watch": "velite dev",
    "velite:build": "velite build",
    "dev": "bun run velite:build && concurrently -k -n velite,next -c cyan,magenta \"bun run velite:watch\" \"next dev\"",
    "dev:poll": "bun run velite:build && concurrently -k -n velite,next -c cyan,magenta \"bun run velite:watch\" \"NEXT_FORCE_POLL=1 next dev\"",
    "build": "bun run clean && bun run velite:build && next build",
    "analyze": "ANALYZE=true bun run build",
    "start": "next start",
    "start:prod": "bun run build && bun run start",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --write",
    "format": "biome format . --write",
    "check": "biome check .",
    "type-check": "bun run velite:build && tsc --noEmit --incremental",
    "qa": "bun run type-check && bun run lint && vitest run --reporter=dot",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ci": "vitest run --coverage --reporter=dot",
    "test:stories": "vitest run --project storybook",
    "prepare": "husky"
  },
